       function onSubmit(token) {

       	function checkValue(itemID) { 
       		
       		var mystring = document.getElementById(itemID).value; 
    			
    			if(!mystring.match(/\S/)) {
        			alert ('Empty value is not allowed');
        			return false;
    			} else {
        			return true;
    			}
    		}
    		
    		if ((checkValue('formName') == true) && ( checkValue('formEmail') == true ) && ( checkValue('formMessage') == true ) ){
         	document.getElementById("contact-form").submit();
			}       
       }
